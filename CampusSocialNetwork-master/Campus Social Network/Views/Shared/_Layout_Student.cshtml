<!--Unify Theme Layout Starts-->
<!DOCTYPE HTML>
<html>
<head>
    <title>@ViewBag.Title - Campus Social Network</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/Content/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="~/Content/assets/css/noscript.css" /></noscript>
</head>
<body class="is-preload">

    <!-- Sidebar -->
    <section id="sidebar">
        <div class="inner">
            @{
                var db = new Campus_Social_Network.Models.ApplicationDbContext();
                var user = db.Users.Single(c => c.UserName == User.Identity.Name);
                var picPath = user.imagePath;
                if (picPath == null)
                {
                    picPath = "/UserImages/default.png";
                }
            }
            <span class="image avatar"><img src=@Url.Content(picPath) alt="Profile Pic" height="200px"/></span>
            <h3 id="logo"><a href="#">@user.firstName @user.lastName</a></h3>
            <nav>
                <ul>
                    <li>@Html.ActionLink("Newsfeed", "Newsfeed", "Student")</li>
                    <li>@Html.ActionLink("Profile", "ViewProfile", "Student", new { id = user.Id }, null)</li>
                    <li>@Html.ActionLink("Messages", "Messages", "Student")</li>
                    <li>@Html.ActionLink("View Teachers", "ViewTeachers", "Student")</li>
                    <li>@Html.ActionLink("Account Settings", "AccountSettings", "Student")</li>
                    <li>
                        @using (Html.BeginForm("Logout", "Home", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Logout" class="btn btn-primary" />
                    }
                </li>
                </ul>
            </nav>
        </div>
    </section>

    <!-- Wrapper -->
    <div id="wrapper">
        <!-- Intro -->
        <section id="intro" class="wrapper style1 fullscreen fade-up">
            <div class="inner">
                <center><h1>Campus Social Network</h1></center>
                <h2>@ViewBag.Title</h2>
                <h3>@ViewBag.Message</h3>
                @RenderBody()
            </div>
        </section>
    </div>



    <!-- Footer -->
    <footer id="footer" class="wrapper style1-alt">
        <div class="inner">
            <ul class="menu">
                <li>&copy; @DateTime.Now.Year Campus Social Network. All rights reserved.</li>
                <li>Developed By: UET CSE Students.</li>
                
            </ul>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/Content/assets/js/jquery.min.js"></script>
    <script src="~/Content/assets/js/jquery.scrollex.min.js"></script>
    <script src="~/Content/assets/js/jquery.scrolly.min.js"></script>
    <script src="~/Content/assets/js/browser.min.js"></script>
    <script src="~/Content/assets/js/breakpoints.min.js"></script>
    <script src="~/Content/assets/js/util.js"></script>
    <script src="~/Content/assets/js/main.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
<!--Unify Theme Layout Ends-->
