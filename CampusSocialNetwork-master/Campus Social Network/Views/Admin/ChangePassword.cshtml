
@{
    ViewBag.Title = "Change Password";
}
<form id="ChangePassword" name="ChangePassword" method="post" enctype="multipart/form-data" onsubmit="return AjaxPost(this)">
    <fieldset>
        <label>Create New Password:</label>
        <input type="password" name="Password" value="" required id="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"><br>
        <label>Confirm Password:</label>
        <input type="password" name="Password2" value="" required id="password_confirm" oninput="check(this)" /><br>
    </fieldset>
    <script language='javascript' type='text/javascript'>
    function check(input) {
        if (input.value != document.getElementById('password').value) {
            input.setCustomValidity('Password Must be Matching.');
        } else {
            // input is valid -- reset the error message
            input.setCustomValidity('');
        }
    }
    </script>
    <input type="submit" class="btn btn-default" value="Update">
</form>
<script>
    function AjaxPost(formData) {
        var ajaxConfig = {
            type: "post",
            url: "/Admin/ChangePassword",
            data: new FormData(formData),
            success: function (result) {
                alert(result);
                window.location.href = "/Admin/ChangePassword"
            }
        }
        if ($(formData).attr('enctype') == "multipart/form-data") {
            ajaxConfig["contentType"] = false;
            ajaxConfig["processData"] = false;
        }
        $.ajax(ajaxConfig);
        return false;
    }
</script>