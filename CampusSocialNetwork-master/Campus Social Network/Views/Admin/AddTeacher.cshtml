@{
    ViewBag.Title = "Add Teacher";
}



@model Campus_Social_Network.Models.Teacher

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form_description">
            <p>Fill up below form to add a new teacher.</p>
        </div>
        <fieldset>
            <hr />
            <div class="form-group">
                <label>First Name*</label>
                @Html.TextBoxFor(m => m.firstName, new { placeholder = "Enter First Name..." })
                @Html.ValidationMessageFor(m => m.firstName)
            </div>
            <div class="form-group">
                <label>Last Name*</label>
                @Html.TextBoxFor(m => m.lastName, new { placeholder = "Enter Last Name..." })
                @Html.ValidationMessageFor(m => m.lastName)
            </div>
            <div class="form-group">
                <label>Designation*</label>
                @Html.TextBoxFor(m => m.designation, new { placeholder = "Enter Last Name..." })
                @Html.ValidationMessageFor(m => m.designation)
            </div>
            <div class="form-group">
                <label>Contact Number</label>
                @Html.TextBoxFor(m => m.contactNumber, new { placeholder = "Enter Contact Number..." })
                @Html.ValidationMessageFor(m => m.contactNumber)
            </div>
            <div class="form-group">
                <label>Email*</label>
                @Html.TextBoxFor(m => m.emailId, new { placeholder = "example@domain.com" })
                @Html.ValidationMessageFor(m => m.emailId)
            </div>
        </fieldset>
        <hr />
        <div class="form-group">
            <div>
                <input type="submit" value="Add Teacher" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <div id="dialog-message">
        <p>
            @TempData["msg"]!
        </p>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script>
        $(document).ready(function () {
            $("#dialog-message").dialog({
                autoOpen: false,
                resizable: false,
                height: 170,
                width: 350,
                modal: true,
                draggable: false,
                show: { effect: 'drop', direction: "up" },
                open: function (event, ui) {
                    $(".ui-dialog-titlebar-close").hide();
                },
                buttons: {
                    Ok: function () {
                        $(this).dialog("close");
                    }
                }
            });
            if ('@TempData["msg"]' != "") {
                $("#dialog-message").dialog('open');
            }
        });
    </script>
}
